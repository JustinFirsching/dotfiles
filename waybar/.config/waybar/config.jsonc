{
    // Waybar Configuration
    // Migrated from polybar config
    // =========================================================================

    "layer": "top",
    "position": "top",
    "height": 15,
    "spacing": 0,

    // Module layout (matching polybar: left=title, center=workspaces, right=status)
    "modules-left": ["hyprland/window"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": ["mpris", "custom/player-prev", "custom/player-play-pause", "custom/player-next", "pulseaudio", "battery", "backlight", "network", "clock", "custom/power"],

    // ===========================================================================
    // LEFT MODULES
    // ===========================================================================

    "hyprland/window": {
        "format": "{}",
        "max-length": 80,
        "separate-outputs": true,
        "rewrite": {
            "": "Arch Linux"
        }
    },

    // ===========================================================================
    // CENTER MODULES
    // ===========================================================================

    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        "all-outputs": false,
        "sort-by-number": true
    },

    // ===========================================================================
    // RIGHT MODULES
    // ===========================================================================

    "mpris": {
        "format": "ğŸµ {artist} - {title}",
        "format-paused": "â¸ {artist} - {title}",
        "format-stopped": "",
        "max-length": 40,
        "tooltip-format": "{player}: {artist} - {title}\n{album}"
    },

    "custom/player-prev": {
        "format": "â®",
        "on-click": "playerctl previous",
        "tooltip": false
    },

    "custom/player-play-pause": {
        "format": "â¯",
        "on-click": "playerctl play-pause",
        "tooltip": false
    },

    "custom/player-next": {
        "format": "â­",
        "on-click": "playerctl next",
        "tooltip": false
    },

    "pulseaudio": {
        "format": "ğŸ”Š {volume}%",
        "format-muted": "ğŸ”‡ Muted",
        "on-click": "pavucontrol",
        "scroll-step": 1
    },

    "battery": {
        "bat": "BAT1",
        "adapter": "ACAD",
        "interval": 60,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "ğŸ”‹ {capacity}%",
        "format-charging": "âš¡ {capacity}%",
        "format-plugged": "ğŸ”Œ {capacity}%",
        "format-full": "âœ… {capacity}%"
    },

    "backlight": {
        "device": "acpi_video0",
        "format": "â˜€ï¸ {percent}%",
        "tooltip-format": "Brightness: {percent}%",
        "on-scroll-up": "brightnessctl set +5%",
        "on-scroll-down": "brightnessctl set 5%-"
    },

    "network": {
        "interval": 5,
        "format-wifi": "ğŸ“¶ {ipaddr}",
        "format-ethernet": "ğŸŒ {ipaddr}",
        "format-disconnected": "âŒ Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr}\n{essid} ({signalStrength}%)"
    },

    "clock": {
        "interval": 1,
        "format": "ğŸ• {:%I:%M %p}",
        "format-alt": "ğŸ“… {:%m/%d/%Y}",
        "tooltip-format": "<tt>{calendar}</tt>"
    },

    "custom/power": {
        "format": "â»",
        "on-click": "wofi --show dmenu --prompt 'Power' --cache-file /dev/null <<< $'Shutdown\\nReboot\\nLogout' | xargs -I {} sh -c 'case {} in Shutdown) systemctl poweroff;; Reboot) systemctl reboot;; Logout) hyprctl dispatch exit;; esac'",
        "tooltip": false
    }
}
